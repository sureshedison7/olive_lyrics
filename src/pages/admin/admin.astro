---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import Navbar from "@components/Navbar.astro";

// Define LyricsTypes for consistency
interface LyricsTypes {
  url: string;
  title: string;
  lyrics: string | null;
  chords: string | null;
  description: string | null;
  album: string | null;
  artist: string | null;
  category: string | null;
  pub_date: string | null;
  key: string | null;
  tags: string | null;
  primary_language: string | null;
  secondary_languages: string | null;
}

// Fetch all songs from the database
const db = Astro.locals.runtime.env
  .DB as import("astro").AstroGlobal["locals"]["runtime"]["env"]["DB"];
const { results: songs } = await db
  .prepare(
    `
    SELECT * FROM songs ORDER BY pub_date DESC
  `,
  )
  .all<LyricsTypes>();

const isLoggedIn = Astro.cookies.get("session")?.value === "logged_in";

if (!isLoggedIn) {
  return Astro.redirect("/admin/login");
}
---

<Layout
  title="Christian Lyrics Admin"
  description="Admin panel for managing Christian worship lyrics"
>

<Navbar/>
  <!-- Include Flowbite CSS -->
  <link
    rel="stylesheet"
    href="https://unpkg.com/flowbite@1.5.3/dist/flowbite.min.css"
  />

  <div class="container mx-auto px-0 py-0">
    <div class="rounded-lg bg-white p-6 shadow-md dark:bg-gray-800">
      <h2
        class="mb-6 text-center text-2xl font-bold text-gray-900 dark:text-white"
      >
        All Songs
      </h2>
      <div class="overflow-x-auto">
        <table
          class="w-full text-left text-sm text-gray-500 dark:text-gray-400"
        >
          <thead
            class="bg-gray-50 text-xs uppercase text-gray-700 dark:bg-gray-700 dark:text-gray-400"
          >
            <tr>
              <th scope="col" class="px-6 py-3">Title</th>
              <th scope="col" class="px-6 py-3">Artist</th>
              <th scope="col" class="px-6 py-3">Album</th>
              <th scope="col" class="px-6 py-3">Category</th>
              <th scope="col" class="px-6 py-3">Key</th>
              <th scope="col" class="px-6 py-3">Primary Language</th>
              <th scope="col" class="px-6 py-3">Publish Date</th>
              <th scope="col" class="px-6 py-3">Actions</th>
            </tr>
          </thead>
          <tbody>
            {
              songs.length > 0 ? (
                songs.map((song) => (
                  <tr
                    class="border-b bg-white dark:border-gray-700 dark:bg-gray-800"
                  >
                    <th
                      scope="row"
                      class="whitespace-nowrap px-6 py-4 font-medium text-gray-900 dark:text-white"
                    >
                      {song.title}
                    </th>
                    <td class="px-6 py-4">{song.artist || "-"}</td>
                    <td class="px-6 py-4">{song.album || "-"}</td>
                    <td class="px-6 py-4">{song.category || "-"}</td>
                    <td class="px-6 py-4">{song.key || "-"}</td>
                    <td class="px-6 py-4">{song.primary_language || "-"}</td>
                    <td class="px-6 py-4">
                      {song.pub_date
                        ? new Date(song.pub_date).toLocaleDateString()
                        : "-"}
                    </td>
                    <td class="px-6 py-4">
                      <div class="flex space-x-2">
                        <a
                          href={`/admin/edit/${song.url}`}
                          class="text-blue-600 hover:text-blue-900 dark:text-blue-400 dark:hover:text-blue-300"
                          >Edit</a>
                        <form
                          action="/admin/delete"
                          method="POST"
                          onsubmit="return confirm('Are you sure you want to delete this song?');"
                        >
                          <input
                            type="hidden"
                            name="url"
                            value={song.url}
                          />
                          <button
                            type="submit"
                            class="text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300"
                          >
                            Delete
                          </button>
                        </form>
                      </div>
                    </td>
                  </tr>
                ))
              ) : (
                <tr>
                  <td
                    colspan="8"
                    class="px-6 py-4 text-center"
                  >
                    No songs found.
                  </td>
                </tr>
              )
            }
          </tbody>
        </table>
      </div>
      <!-- Pagination (basic, can be enhanced) -->
      <div class="mt-4 flex justify-center">
        <nav aria-label="Page navigation">
          <ul class="inline-flex items-center -space-x-px">
            <li>
              <a
                href="#"
                class="ml-0 rounded-l-lg border border-gray-300 bg-white px-3 py-2 text-gray-500 hover:bg-gray-100 hover:text-gray-700 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"
              >
                Previous
              </a>
            </li>
            <li>
              <a
                href="#"
                class="border border-gray-300 bg-white px-3 py-2 text-gray-500 hover:bg-gray-100 hover:text-gray-700 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"
              >
                1
              </a>
            </li>
            <li>
              <a
                href="#"
                class="rounded-r-lg border border-gray-300 bg-white px-3 py-2 text-gray-500 hover:bg-gray-100 hover:text-gray-700 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"
              >
                Next
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>

  <!-- Flowbite JS -->
  <script src="https://unpkg.com/flowbite@1.5.3/dist/flowbite.min.js"></script>
</Layout>