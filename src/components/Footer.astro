---
import Container from "@components/Container.astro";
import { SITE } from "@consts";
import BackToTop from "@components/BackToTop.astro";
---

<footer class="animate border-t border-black/10 bg-gray-50/50 dark:border-white/10 dark:bg-gray-900/50">
  <Container>
    <div class="py-8">
      <div class="grid gap-8 md:grid-cols-4">
        <!-- Brand -->
        <div class="md:col-span-2">
          <h3 class="mb-3 text-lg font-semibold">{SITE.TITLE} ‚úùÔ∏è</h3>
          <p class="mb-4 text-sm text-gray-600 dark:text-gray-400">
            Discover lyrics and chords for worship songs. Perfect for musicians, worship leaders, and music lovers.
          </p>
          <div class="flex gap-2">
            <a href="mailto:{SITE.EMAIL}" class="text-sm text-gray-600 hover:text-black dark:text-gray-400 dark:hover:text-white">
              üìß Contact
            </a>
          </div>
        </div>

        <!-- Quick Links -->
        <div>
          <h4 class="mb-3 font-medium">Browse</h4>
          <ul class="space-y-2 text-sm">
            <li><a href="/lyrics" class="text-gray-600 hover:text-black dark:text-gray-400 dark:hover:text-white">All Lyrics</a></li>
            <li><a href="/chords" class="text-gray-600 hover:text-black dark:text-gray-400 dark:hover:text-white">All Chords</a></li>
            <li><a href="/search" class="text-gray-600 hover:text-black dark:text-gray-400 dark:hover:text-white">Search</a></li>
            <li><a href="/sitemap" class="text-gray-600 hover:text-black dark:text-gray-400 dark:hover:text-white">Sitemap</a></li>
          </ul>
        </div>

        <!-- Categories -->
        <div>
          <h4 class="mb-3 font-medium">Categories</h4>
          <ul class="space-y-2 text-sm">
            <li><a href="/category/worship" class="text-gray-600 hover:text-black dark:text-gray-400 dark:hover:text-white">Worship</a></li>
            <li><a href="/category/praise" class="text-gray-600 hover:text-black dark:text-gray-400 dark:hover:text-white">Praise</a></li>
            <li><a href="/category/gospel" class="text-gray-600 hover:text-black dark:text-gray-400 dark:hover:text-white">Gospel</a></li>
            <li><a href="/category/tamil" class="text-gray-600 hover:text-black dark:text-gray-400 dark:hover:text-white">Tamil</a></li>
          </ul>
        </div>
      </div>

      <!-- Bottom Bar -->
      <div class="mt-8 flex flex-col items-center justify-between border-t border-black/10 pt-6 dark:border-white/10 md:flex-row">
        <div class="text-sm text-gray-600 dark:text-gray-400">
          &copy; {new Date().getFullYear()} {SITE.TITLE}. Made with ‚ù§Ô∏è for worship.
        </div>
        
        <div class="mt-4 flex items-center gap-1.5 md:mt-0">
          <BackToTop />
          <button id="light-theme-button" aria-label="Light theme" class="group flex size-9 items-center justify-center rounded-sm border border-black/15 hover:bg-black/5 dark:border-white/20 dark:hover:bg-white/5">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <circle cx="12" cy="12" r="5"></circle>
              <line x1="12" y1="1" x2="12" y2="3"></line>
              <line x1="12" y1="21" x2="12" y2="23"></line>
              <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
              <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
              <line x1="1" y1="12" x2="3" y2="12"></line>
              <line x1="21" y1="12" x2="23" y2="12"></line>
              <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
              <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
            </svg>
          </button>
          <button id="dark-theme-button" aria-label="Dark theme" class="group flex size-9 items-center justify-center rounded-sm border border-black/15 hover:bg-black/5 dark:border-white/20 dark:hover:bg-white/5">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
            </svg>
          </button>
          <button id="system-theme-button" aria-label="System theme" class="group flex size-9 items-center justify-center rounded-sm border border-black/15 hover:bg-black/5 dark:border-white/20 dark:hover:bg-white/5">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
              <line x1="8" y1="21" x2="16" y2="21"></line>
              <line x1="12" y1="17" x2="12" y2="21"></line>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </Container>
</footer>
